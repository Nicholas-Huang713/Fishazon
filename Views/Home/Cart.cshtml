@{
    ViewData["Title"] = "My Cart ";
}

<div>
    
    @{
        if(@ViewBag.LoggedOutMessage != null)
        {
            <div class="jumbotron">
                <h3>@ViewBag.LoggedOutMessage</h3>
                <a href="/login" class="btn btn-primary">Login</a>
                <a href="/registration" class="btn btn-primary">Register</a>
            </div>
            
        }
    }
    @{
        if(@ViewBag.EmptyMessage != null)
        {
            <div class="jumbotron">
                <h3>@ViewBag.EmptyMessage</h3>
                <a href="/allproducts" class="btn btn-primary">Continue Shopping</a>
            </div>
        }
    }
    @{
        if(@ViewBag.ItemList != null)
        {
            <div class="container">
                <form >
                <div class="row">
                        <div class="col-sm border">
                            <h3 class="ml-2 mt-2 mb-3">@ViewBag.ItemList.Count items in cart</h3>
                            @foreach(var item in @ViewBag.ItemList)
                            {
                                <div class="media">
                                    <a href="/details/@item.ItemId"><img src="/images/@item.Img" class="ml-5 mr-3 cart-img" alt="Product"></a>
                                    <div class="media-body">
                                        <h5 class="mt-0">@item.ItemName</h5>
                                        <p>Price: $@item.Price</p>
                                        <p>
                                            Amount: @item.Amount 
                                            <a href="/delete/@item.ItemId" class="btn btn-sm btn-danger ml-2">Delete</a>
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-sm">
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Subtotal
                                    <span>$@ViewBag.SubTotal</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Delivery
                                    <span>$5.99</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Est. taxes & fees
                                    <span>$2.50</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <h5>Est. Total</h5>
                                    <span class="font-weight-bold">$@ViewBag.Total</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a href="/placeorder" class="btn btn-primary">Place Order</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </form>
            </div>
        }        
    }
</div>