@model User
@{
    ViewData["Title"] = "Registration";
}

<div class="row reg-bg">
    <div class="col-sm"></div>
    <div class="col-sm-6 col-m-8 mt-3 mb-5">
        <div class="regform-container bg-white">
            <p class="text-danger">@ViewBag.Message</p>
            <h3>Register</h3>
            <form asp-action="Register" asp-controller="Home" method="POST">
                <div class="form-group">
                    <label>First Name</label>
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                    <input asp-for="FirstName" type="text" class="form-control" placeholder="First">
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <span class="text-danger" asp-validation-for="LastName"></span>
                    <input asp-for="LastName" type="text" class="form-control" placeholder="Last">
                </div>
                <div class="form-group">
                    <label>Email Address</label>
                    <span class="text-danger" asp-validation-for="Email"></span>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <span class="text-danger" asp-validation-for="Password"></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <span class="text-danger" asp-validation-for="Confirm"></span>
                    <input asp-for="Confirm" type="password" class="form-control" placeholder="Retype Password">
                </div>
                <p>Already have an account? <a href="/login">Sign In</a></p>
                <button type="submit" class="btn btn-primary">Create Account</button>
            </form>
        </div>
    </div>
    <div class="col-sm"></div>
</div>